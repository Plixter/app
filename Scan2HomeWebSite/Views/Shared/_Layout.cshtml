<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @RenderSection("head", required: false)
    @Styles.Render("~/css/bootstrap")
    @Styles.Render("~/css/css")
</head>
<body>
    <header>
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="row">
                <div class="navbar-header">
                    @*var url = '@Url.Action("../Home/AlterProject")' + '?IDProject=' + res;*@
                    <a class="navbar-brand" href="@Url.Action("Index", "ScanHome")" >
                        <img alt="Xerox Logo" style="float: left; padding-right: 10px" src="~/Images/xeroxlogo.png" />
                        <span>Scan Home App Web Portal v@(System.Configuration.ConfigurationManager.AppSettings["version"].ToString())</span></a>
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">@Html.ActionLink("Home", "Index", "ScanHome")</li>
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Create" ? "active" : "")">@Html.ActionLink("Settings", "Create", "ScanHome")</li>
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Deploy" ? "active" : "")">@Html.ActionLink("Deploy App", "Deploy", "ScanHome")</li>
                        <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Remove" ? "active" : "")">@Html.ActionLink("Remove App", "Remove", "ScanHome")</li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div id="body" style="margin-top: 60px;">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
